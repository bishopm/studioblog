{
    "name": "bishopm/skeleton",
    "type": "library",
    "description": "Laravel-based package",
    "keywords": [],
    "homepage": "https://github.com/bishopm/skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Bishop",
            "email": "admin@church.net.za",
            "homepage": "https://github.com/bishopm",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "7.*",
        "laravelcollective/html": "6.*",
        "laravel/ui": "2.*"
    },
    "autoload": {
        "psr-4": {
            "Bishopm\\Skeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "bishopm\\skeleton\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "post-install-cmd": [
            "ln -sr storage/app/public public/storage"
        ],
        "post-package-update": [
            "php artisan vendor:publish",
            "php artisan migrate"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Bishopm\\Skeleton\\Providers\\SkeletonServiceProvider"
            ]
        }
    }
}